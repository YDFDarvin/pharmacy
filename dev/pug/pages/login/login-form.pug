.loging
    .container
        .login__content
            .login-title
                .login-title__text Будь-ласка, увiйдiть!
            .login-form
                .login-form-wrapper
                    form.login-form-login
                        .login-form-login-wrapper
                            h5.login-form__text.login-form__text--semibold Логiн:
                            input(type="email" placeholder="youremail@gmail.com").login-form-login__input
                        .login-form-password-wrapper
                            h5.login-form__text.login-form__text--semibold Пароль:
                            input(type="password").login-form-login__input
                        .login-form-checkbox-wrapper
